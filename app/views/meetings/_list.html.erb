<%- model_class = Meeting -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:nome_site) %></th>
      <th><%= model_class.human_attribute_name(:channel) %></th>
      <th><%= model_class.human_attribute_name(:cidade) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:aprovado) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <!-- <td><%#= link_to meeting.id, meeting_path(meeting) %></td> -->
        <td><%= meeting.name %></td>
        <td><%= meeting.description %></td>
        <td><%= meeting.channel.name %></td>
        <td><%= meeting.city.name + '/' + meeting.city.state.initials %></td>
        <td><%= meeting.start_time.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= if meeting.approved == 0 
                  "NÃ£o"
                else
                  "Sim"
                end %></td>
        <!-- <td><%#=l meeting.created_at %></td> -->
        <td>
        <% if meeting.approved == 1 %>
          <%= link_to "Confirmar", meeting_path(meeting), :class => 'btn btn-info' %>
        <% end %>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_meeting_path(meeting), :class => 'btn btn-default btn-xs' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      meeting_path(meeting),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>